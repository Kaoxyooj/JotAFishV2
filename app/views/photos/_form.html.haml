= simple_form_for @photo, html:{ multipart: true} do |f|
	- if @photo.errors.any?
		#errors
			%h2
			= pluralize(@photo.errors.count,"error")
			prevented this picture from saving. 
			%ul
				- @photo.errors.full_error_message.each do |msg|
					%li= msg
	.form-group
		= f.input :title, input_html: {class: 'form-control'}
	.form-group
		= f.input :description, input_html: {class: 'form-control'}
	= f.submit :submit, input_html: {class: 'btn btn-primary'}